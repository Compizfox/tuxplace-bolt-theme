{% extends 'abstract/master.twig' %}

{% block main %}
	<div>
		<h1>{{ record.title }}</h1>
		<p>{{ record.subtitle }}</p>
		{{ record.teaser }}
	</div>

	<h1>Laatste posts</h1>

	<div class="latest">
		{% setcontent records = "entries/latest/3" allowpaging %}
		{% for record in records %}
			<article>
				<header>
					<h2><a href="{{ record.link }}">{{ record.title }}</a></h2>
					<p class="text-muted">{{ record.datecreated|date('Y-m-d')}}</p>
				</header>

				{% if record.image is not empty %}
					<a href="{{ record.link }}"><img src="{{ image(record.image) }}"></a>
				{% endif %}

				{{ record.teaser }}
			</article>

			{% if not loop.last %}
				<hr>
			{% endif %}
		{% endfor %}
	</div>
{% endblock main %}