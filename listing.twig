{% extends 'abstract/master.twig' %}

{% block main %}
	<div class="listing">
		{% for record in records %}
			<article>
				<header>
					<h1><a href="{{ record.link }}">{{ record.title }}</a></h1>
					<p class="text-muted">{{ record.datepublish|date('Y-m-d')}}</p>
				</header>

				{% if record.image is not empty %}
					<a href="{{ record.link }}"><img src="{{ image(record.image) }}"></a>
				{% endif %}

				{{ record.teaser }}
			</article>

			{% if not loop.last %}
				<hr>
			{% endif %}
		{% endfor %}
	</div>
{% endblock %}